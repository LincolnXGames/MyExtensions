class TextReporterExtension {
  getInfo() {
    return {
      id: 'textreporter',
      name: 'Text Reporter',
      blocks: [
        {
          opcode: 'textReporter',
          blockType: Scratch.BlockType.REPORTER,
          text: '[TXT]',
          arguments: {
            TXT: {
              type: Scratch.ArgumentType.STRING,
              defaultValue: 'Hello World!'
            }
          }
        }
      ]
    };
  }
  textReporter(args) {
    return args.TXT;
  }
}
Scratch.extensions.register(new TextReporterExtension());
